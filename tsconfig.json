{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "noResolve": false,
      "noImplicitAny": false,
      "removeComments": true,
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,      
      "resolveJsonModule": true,
      "lib": [
        "es6",
        "dom",
        "es2017"
      ],      
    },    
    "exclude": [
      "./node_modules/**/*"
    ]
  }
